---
import { Icon } from 'astro-icon';

export interface Props {
	label?: string;
	class?: string;
	iconClass?: string;
	iconName?: string;
}

const {
	label = 'Toggle between Dark and Light mode',
	class:
		className = 'hover:text-secondary-light rounded-lg text-sm p-2.5 inline-flex items-center',
	iconClass = 'w-6 h-6',
	iconName = 'tabler:sun',
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-color-scheme>
	<Icon name={iconName} class={iconClass} />
</button>
