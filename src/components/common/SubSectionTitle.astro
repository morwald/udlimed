---
export interface Props {
  title?: string;
  text?: string;
  showText?: boolean;
}
const { title, text, showText = false } = Astro.props as Props;
---

<section class="mt-6 sm:text-left md:mt-6 max-w-3xl">
  <p class="text-2xl font-bold tracking-wide">{title}</p>
  {showText && <>
    <h2 class="text-2xl md:text-3xl font-medium leading-tighter tracking-tighter mb-4 font-heading">
      {text}
    </h2>
  </>}
</section>
