---
import panorama from '../assets/images/panorama.jpg'
---

<section class="h-[200px] md:h-[300px]">
  <div class="bg-[url('src/assets/images/panorama.jpg')] bg-no-repeat bg-cover bg-top h-full">
  <img src="panorama.src" class="absolute inset-0 object-cover w-full h-full" alt="Panorama" />
    <div class="flex items-start justify-center h-full">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="pt-10 md:pt-20 md:pb-20 text-center">
          <h1 class="text-3xl text-secondary-light md:text-[3rem]">
            Hausarztpraxis
            <span class="sm:whitespace-nowrap">Udligenswil</span>
          </h1>
        </div>
      </div>
    </div>
  </div>
