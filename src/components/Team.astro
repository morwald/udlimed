---
import { Icon } from 'astro-icon';
import team from '../assets/images/team.jpg'

import SectionTitle from '../components/common/SectionTitle.astro';
---

<section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
  <SectionTitle title="Unser Praxisteam" />
	<div class="grid gap-6 row-gap-10 md:grid-cols-2">
		<div class="md:pb-6 md:pr-16">
			<h2 class="mb-8 text-xl font-bold">
				Wir bieten
			</h2>
			<div class="flex">
				<div class="flex flex-col items-center mr-4">
					<div>
						<div class="flex items-center justify-center w-10 h-10 rounded-full border-primary-dark border-2">
							<Icon name="tabler:home" class="w-6 h-6 text-primary-600" />
						</div>
					</div>
				</div>
				<div class="pt-1 pb-8">
					<p class="mb-2 text-xl text-tertiary font-medium">Medizinische Grundversorgung</p>
					<p class="text-secondary-light1">
					</p>
				</div>
			</div>
			<div class="flex">
				<div class="flex flex-col items-center mr-4">
					<div>
						<div class="flex items-center justify-center w-10 h-10 rounded-full border-primary-dark border-2">
							<Icon name="mdi:children-toy" class="w-6 h-6 text-primary-600" />
						</div>
					</div>
				</div>
				<div class="pt-1 pb-8">
					<p class="mb-2 text-xl text-tertiary font-medium">Begleitung Kinder ab Geburt</p>
					<p class="text-secondary-light1">
					</p>
				</div>
			</div>
			<div class="flex">
				<div class="flex flex-col items-center mr-4">
					<div>
						<div class="flex items-center justify-center w-10 h-10 rounded-full border-primary-dark border-2">
							<Icon name="mdi:user-plus" class="w-6 h-6 text-primary-600" />
						</div>
					</div>
				</div>
				<div class="pt-1 pb-8">
					<p class="mb-2 text-xl text-tertiary font-medium">Individuelle Betreuung</p>
					<p class="text-secondary-light1">
					</p>
				</div>
			</div>
			</div>
		<div class="relative">
      <img src={team.src} width={team.width} height={team.height} alt="Unser Praxisteam" />
		</div>
	</div>
</section>
