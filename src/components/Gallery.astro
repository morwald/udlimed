---
import SectionTitle from '../components/common/SectionTitle.astro';
import room1 from '../assets/images/gallery/room1.jpg'
import reception from '../assets/images/gallery/reception.jpg'
import waitingroom from '../assets/images/gallery/waitingroom.jpg'
import eyetest from '../assets/images/gallery/eyetest.jpg'
import room2 from '../assets/images/gallery/room2.jpg'
---

<section class="relative">
	<div class="max-w-6xl mx-auto px-4 py-16 lg:py-20 sm:px-6">
    <SectionTitle title="Gallerie" text="Ein Blick in unsere Praxis" showText={true} />

<div class="max-w-4xl mx-auto px-4 py-8 pt-4 lg:py-10 lg:pt-6 sm:px-6">
    <div class="relative flex items-center justify-center">
        <a class="-translate-y-1/2 pr-5 text-primary hover:text-tertiary cursor-pointer"
            onclick="moveSlide(-1)">❮</a>
        
        <div class="slide relative">
            <img src={room1.src} class="mx-auto max-w-xs md:max-w-xl" width={room1.width} height={room1.height} alt="Behandlungsraum" />
        </div>

        <div class="slide relative">
            <img src={reception.src} class="mx-auto max-w-xs md:max-w-xl" width={reception.width} height={reception.height} alt="Behandlungsraum" />
        </div>

        <div class="slide relative">
            <img src={waitingroom.src} class="mx-auto max-w-xs md:max-w-xl" width={waitingroom.width} height={waitingroom.height} alt="Behandlungsraum" />
        </div>


        <div class="slide relative">
            <img src={eyetest.src} class="mx-auto max-w-[12rem] md:max-w-xs" width={eyetest.width} height={eyetest.height} alt="Behandlungsraum" />
        </div>

        
        <div class="slide relative">
            <img src={room2.src} class="mx-auto max-w-[12rem] md:max-w-xs" width={room2.width} height={room2.height} alt="Behandlungsraum" />
        </div>
        
        <a class="-translate-y-1/2 pl-5 text-primary hover:text-tertiary cursor-pointer"
            onclick="moveSlide(1)">❯</a>
    </div>
    
</div>
  <div class="flex justify-center items-center space-x-5">
      <div class="dot w-3 h-3 rounded-full cursor-pointer" onclick="currentSlide(1)"></div>
      <div class="dot w-3 h-3 rounded-full cursor-pointer" onclick="currentSlide(2)"></div>
      <div class="dot w-3 h-3 rounded-full cursor-pointer" onclick="currentSlide(3)"></div>
      <div class="dot w-3 h-3 rounded-full cursor-pointer" onclick="currentSlide(4)"></div>
      <div class="dot w-3 h-3 rounded-full cursor-pointer" onclick="currentSlide(5)"></div>
  </div>
</section>

<script is:inline>
    let slideIndex = 1;
    showSlide(slideIndex);

    function moveSlide(moveStep) {
        showSlide(slideIndex += moveStep);
    }

    function currentSlide(n) {
        showSlide(slideIndex = n);
    }

    function showSlide(n) {
        let i;
        const slides = document.getElementsByClassName("slide");
        const dots = document.getElementsByClassName('dot');
        
        if (n > slides.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = slides.length }

        for (i = 0; i < slides.length; i++) {
            slides[i].classList.add('hidden');
        }

        for (i = 0; i < dots.length; i++) {
            dots[i].classList.remove('bg-secondary-light');
            dots[i].classList.add('bg-primary-dark');
        }

        slides[slideIndex - 1].classList.remove('hidden');

        dots[slideIndex - 1].classList.remove('bg-primary-dark');
        dots[slideIndex - 1].classList.add('bg-secondary-light');
    }
</script>
